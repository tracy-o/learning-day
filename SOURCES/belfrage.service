[Unit]
Description=Start the belfrage service
After=network.target network-online.target
[Service]
Environment=HOME=/home/component
Environment=PORT=7080
User=component
Group=component
WorkingDirectory=/home/component/belfrage
ExecStart=/home/component/belfrage/bin/belfrage foreground
Restart=on-failure
[Install]
WantedBy=multi-user.target
